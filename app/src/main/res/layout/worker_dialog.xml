<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_marginBottom="25dp"
              android:layout_marginTop="25dp">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/worker_image"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right">
            <TextView
                    android:text="Id: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
            <TextView
                    android:text="Name: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
            <TextView
                    android:text="Gender: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
            <TextView
                    android:text="Profession: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
            <TextView
                    android:text="Email: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left">
            <TextView
                    android:text="Oompa Loompa's Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/worker_id"
                    android:textSize="18sp"/>
            <TextView
                    android:text="Oompa Loompa's Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/worker_name"
                    android:textSize="18sp"/>
            <TextView
                    android:text="Oompa Loompa's Gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/worker_gender"
                    android:textSize="18sp"/>
            <TextView
                    android:text="Oompa Loompa's Profession"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/worker_profession"
                    android:textSize="18sp"/>
            <TextView
                    android:text="Oompa Loompa's Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/worker_email"
                    android:textSize="14sp"
                    android:autoLink="email"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>